{
    "compilerOptions": {
        "target": "es5", 
        "module": "commonjs",
        "rootDir": "./src",      
        "resolveJsonModule": true,
        "outDir": "./dist",     
        "esModuleInterop": true, 
        "forceConsistentCasingInFileNames": true, 
        "strict": true, 
        "strictNullChecks": false,                        
        "strictPropertyInitialization": false,             
        "skipLibCheck": true 
    }
}
